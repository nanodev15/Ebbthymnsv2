<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#464545"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/ic_svgfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
    />

    <ImageView
        android:id="@+id/imageBook"
        android:src="@drawable/ic_read_book"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textCantik"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:tint="#422654"
        />
    <TextView
        android:id="@+id/textCantik"
        android:textColor="#422654"
        android:gravity="center"
        android:text="Cantiques des eglises baptissttes bibliques du Togo"
        android:textSize="35dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:shadowColor="#5b275c"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textFontWeight="1000"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontbreathe"/>
    <ProgressBar
        android:layout_below="@id/textCantik"
        android:layout_centerHorizontal="true"
        android:padding="6dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/appVersion"
        android:textColor="#422654"
        android:text="Version 1.0"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:textStyle="bold|italic"
        android:shadowColor="#5b275c"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginBottom="15dp"
        android:textFontWeight="1000"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom= "true"
        android:gravity="center"
        />

</RelativeLayout>